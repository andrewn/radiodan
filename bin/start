#!/usr/bin/env ruby
require 'pathname'
require 'yaml'

require 'rubygems'
require 'bundler/setup'

ROOT = File.join(File.dirname(__FILE__), '..')

require_relative '../lib/radio'
require_relative '../lib/web_app'

$PROGRAM_NAME = 'radiodan'

EM.synchrony do  
  config = YAML.load_file(File.join(ROOT, 'config.yml'))
  @radio = Radio.new(config)

  # start web interface
  Thin::Server.start WebApp, '0.0.0.0', 3000
  
  # graceful shutdown of service
  # also stops MPD
  %w{SIGINT SIGTERM}.each do |signal|
    Signal.trap(signal) do
      EM::Synchrony.next_tick do
        begin
          @radio.stop
        ensure
          EM.stop
        end
      end
    end
  end

  EM.error_handler do |e|
    puts "Error raised during event loop: #{e.message}"
    puts e.backtrace.join("\n")
  end
  
  EM::Synchrony.next_tick do
    @radio.start
  end
end
